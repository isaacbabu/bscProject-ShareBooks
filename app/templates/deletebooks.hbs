  <div class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"> <div id="confirm-title" ></div></p>
      <button class="delete" aria-label="close" {{action 'toggleModal'}}></button>
    </header>
    <section class="modal-card-body">
      <div id="confirm-body" ></div>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-danger" id="confirmButton" {{action 'deleteData'}}>Confirm Delete</button>
      <button class="button" {{action 'toggleModal'}}>Cancel</button>
    </footer>
  </div>
</div>
