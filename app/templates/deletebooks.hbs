  <div class="field">
    <label class="label">Book Upload Code</label>
    <div class="control">
      {{input class="input" type="text" value=alphanum  placeholder="Enter the security code of the book"}}
    </div>
  </div>
  



  <div class="field is-grouped">
  <p class="control">
    <a class="button is-danger" role="button" {{action 'confirm'}}>
      Delete
    </a>
  </p>
  <p class="control">
    <a class="button is-light" role="button" {{action 'cancelData'}}>
      Cancel
    </a>
  </p>
</div>
  </container>
</section>
